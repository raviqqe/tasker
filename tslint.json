{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "src/**/*.json"]
  },
  "rules": {
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "max-classes-per-file": false,
    "no-shadowed-variable": false,
    "no-var-requires": false
  }
}
